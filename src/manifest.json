{
  "name": "readMe Browser Extension",
  "version": "0.0.1",
  "options_page": "options.html",
  "background": {
    "persistent": false,
    "scripts": ["background.bundle.js"]
  },
  "browser_action": {
    "default_icon": "icon-64.png"
  },
  "icons": {
    "32": "icon-32.png",
    "64": "icon-64.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "notifications",
    "cookies",
    "https://readme2018.herokuapp.com/"
  ],
  "manifest_version": 2,
  "content_security_policy":
    "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
