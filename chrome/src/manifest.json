{
  "name": "readMe Browser Extension",
  "options_page": "options.html",
  "background": {
    "persistent": false,
    "scripts": ["background.bundle.js"]
  },
  "browser_action": {
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "notifications",
    "cookies",
    "http://localhost:8080/"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentscript.bundle.js"]
    }
  ],
  "manifest_version": 2,
  "content_security_policy":
    "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
